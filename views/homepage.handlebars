<div class="container">
  <h1>Welcome to the Tech Blog</h1>
  <hr>

  {{#each posts as |post|}}
  <div class="card mb-4">
    <div class="card-header">
      <h2>{{post.name}}</h2>
      <p>Time Commented: {{formatDate post.time_commented}}</p>
    </div>
    <div class="card-body">
      <!-- Display other post details as needed -->
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
  {{/each}}
</div>
